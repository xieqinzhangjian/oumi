</div>
 


<div class="w main">
  <div class="right-extra">
    
<div class="box">
      <h3 class="goods_sxtitle"><span>{$brand.brand_name}</span></h3>
      <div class="boxCenterList">
        <table width="100%" border="0" cellpadding="5" cellspacing="1" bgcolor="#dddddd">
        <tr>
          <td bgcolor="#ffffff" width="200" align="center" valign="middle">
          <div style="width:200px; overflow:hidden;">
          <!-- {if $brand.brand_logo} -->
            <img src="data/brandlogo/{$brand.brand_logo}" />
            <!-- {/if} -->
          </div>
          </td>
          <td bgcolor="#ffffff" style="padding:10px; line-height:25px;">
          {$brand.brand_desc|nl2br}<br />
            <!-- {if $brand.site_url} -->
            {$lang.official_site} <a href="{$brand.site_url}" target="_blank" class="f6">{$brand.site_url}</a><br />
            <!-- {/if} -->
          
         </td>
        </tr>
      </table>
      </div>
    </div>
    <div style="height:0px; line-height:0px; clear:both;"></div>
    <!-- #BeginLibraryItem "/library/goods_list.lbi" --><!-- #EndLibraryItem --> <!-- #BeginLibraryItem "/library/pages.lbi" --><!-- #EndLibraryItem --> </div>
  <div class="left"> 
    
    <!-- 有关键字时导航聚类 --> 
    <!-- #BeginLibraryItem "/library/category_tree.lbi" --><!-- #EndLibraryItem --> 
    

    {if $top_goods}
