  <div class="w">
  <div class="breadcrumb"><!-- #BeginLibraryItem "/library/ur_here.lbi" --><!-- #EndLibraryItem --></div>
</div>

<div class="w main" >
  <div class="right-extra">
  <!--right start-->
    <div class="box">
     <div class="box_1">
      <div style="border:1px solid #E4E4E4; padding:20px 15px;">
         <div class="tc" style="padding:8px; line-height:35px;">
         <font class="f5 f6" style="color:#666666; font-size:18px; font-family:微软雅黑">{$article.title|escape:html}</font><br /><font class="f3">{$article.author|escape:html} / {$article.add_time}</font>
         </div>
         <!-- {if $article.content } -->
          {$article.content}
         <!-- {/if} -->
         {if $article.open_type eq 2 or $article.open_type eq 1}<br />
         <div><a href="{$article.file_url}" target="_blank">{$lang.relative_file}</a></div>
          {/if}
         <div style="padding:8px; margin-top:15px; text-align:left; border-top:1px solid #ccc;">
         <!-- 上一篇文章 -->
          {if $next_article}
            {$lang.next_article}:<a href="{$next_article.url}" class="f6">{$next_article.title}</a><br />
          {/if}
          <!-- 下一篇文章 -->
          {if $prev_article}
            {$lang.prev_article}:<a href="{$prev_article.url}" class="f6">{$prev_article.title}</a>
          {/if}
         </div>
      </div>
    </div>
  </div>
